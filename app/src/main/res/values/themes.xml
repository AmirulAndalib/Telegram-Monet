<resources>
    <!-- Base application theme. -->

    <style name="Theme.TelegramMonet" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/system_accent1_100</item>
        <item name="colorPrimaryVariant">@color/system_neutral1_10</item>
        <item name="colorOnPrimary">@color/system_accent1_100</item>
        <item name="android:background">@color/system_neutral1_10</item>
        <item name="android:color">@color/system_accent1_1000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color and buttons. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorAccent">@color/system_accent1_200</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.TelegramMonet.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="button_style">
        <item name="android:backgroundTint">@color/system_accent1_600</item>
        <item name="android:textColor">@color/system_accent1_50</item>
        <item name="iconTint">@color/system_accent1_50</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>